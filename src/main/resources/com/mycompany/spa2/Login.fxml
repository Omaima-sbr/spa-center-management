<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.spa2.LoginController">
    
    <!-- ðŸ–¼ï¸ Background Image -->
    <ImageView  fx:id="backgroundImage" fitHeight="Infinity" fitWidth="Infinity" layoutX="0.0" layoutY="0.0" pickOnBounds="true" preserveRatio="false">
        <image>
            <Image url="@../../../images/backgroundd.jpg" />
        </image>
    </ImageView>

    <!-- ðŸ” Login Field -->
    <TextField fx:id="loginField" layoutX="209.0" layoutY="201.0" prefHeight="50.0" prefWidth="360.0" promptText="USENAME" style="         -fx-background-color: rgba(255, 255, 255, 0.8);         -fx-background-radius: 15;         -fx-border-radius: 15;         -fx-border-color: black;         -fx-font-size: 16;         -fx-font-weight: bold;" />

    <!-- ðŸ”’ Password Field -->
    <PasswordField fx:id="passwordField" layoutX="220.0" layoutY="280.0" prefHeight="50.0" prefWidth="360.0" promptText="PASSWORD" style="         -fx-background-color: rgba(255, 255, 255, 0.8);         -fx-background-radius: 15;         -fx-border-radius: 15;         -fx-border-color: black;         -fx-font-size: 16;         -fx-font-weight: bold;" />

    <!-- âœ… Submit Button -->
    <Button fx:id="submitButton" layoutX="320.0" layoutY="360.0" onAction="#handleLogin" prefHeight="40.0" prefWidth="160.0" style="         -fx-background-color: #F7C59F;         -fx-text-fill: black;         -fx-font-size: 14;         -fx-font-weight: bold;         -fx-background-radius: 20;         -fx-border-radius: 20;         -fx-border-color: black;" text="Submit" />

    <!-- ðŸ–¼ï¸ Logo -->
    <ImageView fitHeight="120.0" fitWidth="216.0" layoutX="14.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../../../images/logooo.png" />
        </image>
    </ImageView>

</AnchorPane>
